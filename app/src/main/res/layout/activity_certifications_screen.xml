<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certifications"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#424242"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:paddingBottom="16dp"/>

    <!-- Question: Do you have any certifications? -->
    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you have any certifications?"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/tvTitle"
        android:layout_marginBottom="20dp" />

    <!-- Radio Group for Yes/No response -->
    <RadioGroup
        android:id="@+id/rgCertifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvQuestion"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/rbYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes" />

        <RadioButton
            android:id="@+id/rbNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No" />
    </RadioGroup>

    <!-- Certifications Input Field (Initially Hidden) -->
    <EditText
        android:id="@+id/etCertifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter certifications (comma-separated)"
        android:visibility="gone"
        android:layout_below="@id/rgCertifications"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <!-- Save Button (Near Bottom) -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Save"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="@drawable/save_btn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"/>

    <!-- Cancel Button (Above Save) -->
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Cancel"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/black"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="@drawable/cancel_btn"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btnSave"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>
